<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
      <% if order.role == current_user.role || current_user.role >= 2 %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.email %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <% if user_signed_in? && current_user.role >= 2 %>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <%end%>
      </tr>
      <%end%>
    <%end%>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.role >= 2 %>
<%= link_to 'New Order', new_order_path, :class => 'button' %>
<%end%>
<a href='/users/edit' class='button'>Edit account details !</a>
